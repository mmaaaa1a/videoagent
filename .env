EMBEDDING_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1
EMBEDDING_MODEL_NAME=text-embedding-v4
EMBEDDING_MODEL_DIM=1024

# ============================================
# 监控配置
# ============================================
# 健康检查间隔 (秒)
HEALTH_CHECK_INTERVAL=30

# 性能监控
ENABLE_METRICS=true

# 日志轮转
LOG_ROTATION=true
MAX_LOG_SIZE=100MB
MAX_LOG_FILES=10